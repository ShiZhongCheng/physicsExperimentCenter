  font-size: 10px;
  line-height: 50rpx;
}
.big-stament{
  width: 100%;
  position: absolute;
  bottom: 200rpx;
  left: 0;
}
.stament{
  width: 100%;
  text-align: center;
}
.navigateBack{
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
