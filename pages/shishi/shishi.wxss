page {
  width: 100%;
  height: 100%;
  background:#eee;
}

.announcement{
  width: 100%;
  height: 150rpx;
  position: fixed;
  z-index: 100;
  border-bottom: 1px #fff solid;
  background: #eee;
}
.announcement_mesg{
  text-align: center;
}

/*内容区*/
.soroll{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.soroll-contain{
  position: absolute;
  top: 150rpx;
  width: 100%;
  background: #eee;
}
.contain-box{
  width: 18%;
  height: 50rpx;
  float: left;
  margin-left: 1.6%;
  margin-top: 3px;
  /*background: #fff;*/
