/**index.wxss**/
page {
  width: 100%;
  height: 100%;
  background:#eee;
}

.slide-image{
  width: 100%;
}
.container{
  padding: 100rpx 0;
}
.userinfo {
  position: absolute;
  left: 36%;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 100;
  background: rgba(0, 0, 0, 0.4)
}
.userinfo-nickname {
  color: #fff;
  font-size: 14px;
  padding-bottom: 10rpx;
}
.top-bottom{
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 20rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
}

/*按钮*/
.container-button-box{
  width: 100%;
  height: 150rpx;
  background: #fff;
}
.con-button{
  width: 25%;
  height: 150rpx;
  float: left;
}
.scanCode{
  width: 60rpx;
  height: 60rpx;
  margin-left: 35%;
  padding-top: 30rpx;
}
.scanCode-image{
   width: 60rpx;
   height: 60rpx;
}
.usermotto{
  font-size: 10px;
  margin-top: 15rpx;
  color: #aaa;
  text-align: center;
}

/*最新动态*/
.newDongTai{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.newTitle{
  width: 100%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin-bottom: 30rpx;
  font-size: 15px;
}
.newKaPa{
  margin: 20rpx;
  border-top: 1px #aaa solid; 
  padding: 15rpx;
  height: 150rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.newKaPa-img{
  width: 150rpx;
  height: 150rpx;
}
.newKaPa-text{
  margin-right: 15rpx;
  position: absolute;
  top: 20rpx;
  left: 200rpx;
  height: 150rpx;
  line-height: 37rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 12px;
  color: #5B5B5B;
}
.newKaPa-text-title{
  width: 60%;
  height: 20px;
  line-height: 20px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 15px;
  color: #000;
}
.newKaPa-text-time{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 13px;
  color: #aaa;
}
