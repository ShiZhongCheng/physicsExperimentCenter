/* admin.wxss */
page{
  background: #eee;
}
.personnel{
  width: 100%;
  margin: 0 auto;
  background: #fff;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.personnel_list{
  width: 30%;
  height: 100rpx;
  margin: 1.3%;
  float: left;
  text-align: center;
  font-size: 15px;
}
.personnel_list_title{
  line-height: 50rpx;
  font-size: 12px;
}
.personnel_list_number{
  font-size: 15px;
  font-weight: bold;
  line-height: 40rpx;
}
.line{
  border-right: 1px #eee solid;
}

/* 动态  */
.dynamic{
  width: 100%;
  background: #fff;
  margin-top: 35rpx;
  padding-bottom: 20rpx;
}
.dynamic_title{
  font-size: 11px;
  padding: 15px;
}
.newKaPa{
  margin: 20rpx;
  border-top: 1px #aaa solid; 
  padding: 15rpx;
  height: 150rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.newKaPa-img{
  width: 150rpx;
  height: 150rpx;
}
.newKaPa-text{
  margin-right: 15rpx;
  position: absolute;
  top: 20rpx;
  left: 200rpx;
  height: 150rpx;
  line-height: 37rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 12px;
  color: #5B5B5B;
  width:390rpx;
}
.newKaPa-text-title{
  width: 60%;
  height: 20px;
  line-height: 20px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 15px;
  color: #000;
}
.newKaPa-text-time{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 13px;
  color: #aaa;
}

.button_mange{
  width: 100rpx;
  height: 150rpx;
  position: absolute;
  top: 20rpx;
  right: 0;
}
.but{
  height: 65rpx;
  width: 100%;
  margin-top: 5rpx;
  margin-bottom: 5rpx; 
  float: left;
  line-height: 65rpx;
  text-align: center;
  font-size: 12px;
  border-radius: 5px;
  z-index: 100;
}
