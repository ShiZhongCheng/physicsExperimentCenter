/* chome.wxss */
page{
  background: #eee;
}
.top_box{
  width: 100%;
  height: 300rpx;
}
.bgimg{
  width: 100%;
  max-height: 300rpx;
  filter: blur(2px);
}
.my_classs{
  width: 100%;
  height: 80rpx;
  background: #fff;
  line-height: 80rpx;
  font-size: 12px;
  box-shadow: 0 1px 2px 1px #CECECE;
}
.my_course_else_box{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 100;
}
.my_course_else{
  width: 100%;
  height: 80rpx;
  background: #fff;
  line-height: 80rpx;
  font-size: 12px;
  box-shadow: 0 1px 2px 1px #CECECE;
  position: absolute;
  left: 0;
  top: 40%;
}

/* 课程列表  */
.course_box{
  margin: 25rpx;
}
.course_list{
  width: 100%;
  box-shadow: 0 1px 2px 0.5px #CECECE;
  background: #fff;
  border-radius: 5px;
  height: 160rpx;
  float: left;
  margin-bottom: 15rpx;
  position: relative;
}
.static{
  position: absolute;
  bottom: 5rpx;
  right: 5rpx;
  font-size: 10px;
  line-height: 25rpx;
}
.course_list_img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-top: 40rpx;
  margin-left: 40rpx;
}
.course_name{
  width: 320rpx;
  height: 80rpx;
  position: absolute;
  left: 160rpx;
  top: 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  line-height: 130rpx;
  font-size: 14px;
}
.course_class{
  width: 300rpx;
  height: 80rpx;
  position: absolute;
  left: 160rpx;
  top: 80rpx;
  line-height: 40rpx;
  font-size: 10px;
  color: #ABABAB;
}

/* 底部我的课程  */
.my_course{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 25rpx;
  right: 10rpx;
  border-radius: 50%; 
  box-shadow: 0 0 4px 1px #CECECE;
  text-align: center;
  background: radial-gradient(#fff, #B3B3B3);
}
.my_course_img{
  width: 60rpx;
  height: 60rpx;
  margin-top: 25rpx;
}